			win98Radio.addEventListener('change', () => {
				win98CSS.disabled = false;
				winxpCSS.disabled = true;
				themeText.textContent = 'Windows 98';
			});
			
			winxpRadio.addEventListener('change', () => {
				win98CSS.disabled = true;
				winxpCSS.disabled = false;
				themeText.textContent = 'Windows XP';
			});
			
			// Tab functionality
			const tabs = document.querySelectorAll('[role="tab"]');
			const panels = document.querySelectorAll('[role="tabpanel"]');
			
			tabs.forEach((tab, index) => {
				tab.addEventListener('click', () => {
					tabs.forEach(t => t.setAttribute('aria-selected', 'false'));
					panels.forEach(p => p.hidden = true);
					
					tab.setAttribute('aria-selected', 'true');
					panels[index].hidden = false;
				});
			});
			
			// Clock
