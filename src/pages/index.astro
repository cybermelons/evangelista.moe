			/* Sticky note styles */
			.sticky-note {
				position: relative;
				padding: 1em;
				width: 250px;
				max-width: 100%;
				min-height: 180px;
				background: linear-gradient(to bottom, rgba(0,0,0,.05), rgba(0,0,0,.25));
				background-color: #FFFD75;
				box-shadow: 5px 5px 10px -2px rgba(33,33,33,.3);
				transform: rotate(-2deg) skew(-1deg,1deg);
				transition: transform .15s;
				margin: 20px auto 0;
			}
			
			.sticky-note:hover {
				transform: rotate(-1deg) skew(-0.5deg, 0.5deg);
			}
			
			.sticky-note p {
				font-family: 'Comic Sans MS', 'Gloria Hallelujah', cursive;
				font-size: 14pt;
				color: #333;
				margin: 5px 0;
			}
			
			/* Responsive - keep Windows aesthetic */
			@media (max-width: 768px) {
				body {
