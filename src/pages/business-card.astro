<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Marc Evangelista - Business Card</title>
		
		<!-- Windows CSS libraries -->
		<link rel="stylesheet" href="https://unpkg.com/98.css" id="win98-css" />
		<link rel="stylesheet" href="https://unpkg.com/xp.css" id="winxp-css" disabled />
		
		<style>
			@page {
				size: 3.5in 2in;
				margin: 0;
			}
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				margin: 0;
				padding: 0;
			}
			
			.card-container {
				width: 3.5in;
				height: 2in;
				position: relative;
				background: white;
				page-break-after: always;
				overflow: hidden;
			}
			
			.window {
				width: 100%;
				height: 100%;
				margin: 0;
				display: flex;
				flex-direction: column;
			}
			
			/* Slim title bar to save space */
			.title-bar {
				height: 20px;
				padding: 2px;
				display: flex;
				align-items: center;
				justify-content: space-between;
			}
			
			.title-bar-text {
				font-size: 11px;
				line-height: 16px;
				padding-left: 2px;
			}
			
			.title-bar-controls {
				display: flex;
				height: 16px;
			}
			
			.title-bar-controls button {
				width: 16px;
				height: 14px;
				min-width: 16px;
				min-height: 14px;
				padding: 0;
				margin: 0 1px;
				font-size: 8px;
				display: flex;
				align-items: center;
				justify-content: center;
			}
			
			.window-body {
				flex-grow: 1;
				padding: 8px;
				padding-bottom: 0;
				display: flex;
				flex-direction: column;
				font-size: 9px;
				height: calc(100% - 20px);
				overflow: hidden;
			}
			
			/* Main content area */
			.card-content {
				flex-grow: 1;
				display: flex;
				flex-direction: column;
			}
			
			/* Name and title */
			.header-section {
				margin-bottom: 8px;
			}
			
			.name {
				font-size: 16px;
				font-weight: bold;
				margin-bottom: 2px;
				font-family: 'Arial', sans-serif !important;
				-webkit-font-smoothing: antialiased;
			}
			
			.title {
				font-size: 10px;
				color: #666;
			}
			
			/* Main tagline */
			.tagline {
				font-size: 11px;
				font-weight: bold;
				color: #0052cc;
				margin-bottom: 10px;
				font-style: italic;
			}
			
			/* Skills badges in horizontal layout */
			.badge-container {
				display: flex;
				gap: 4px;
				flex-wrap: wrap;
				margin-bottom: 10px;
				align-items: center;
			}
			
			.badge {
				background: #c0c0c0;
				border: 1px solid;
				border-color: #fff #808080 #808080 #fff;
				padding: 2px 6px;
				font-size: 8px;
				white-space: nowrap;
			}
			
			.badge.operator {
				background: transparent;
				border: none;
				padding: 2px 3px;
				font-weight: bold;
			}
			
			/* Impact section with better layout */
			.impact-section {
				flex-grow: 1;
			}
			
			.impact-row {
				display: flex;
				align-items: center;
				margin-bottom: 4px;
				font-size: 8px;
			}
			
			.impact-label {
				font-weight: bold;
				color: #666;
				width: 70px;
				flex-shrink: 0;
			}
			
			.impact-value {
				flex-grow: 1;
				padding: 2px 4px;
				background: #fff;
				border: 1px solid;
				border-color: #808080 #fff #fff #808080;
			}
			
			/* Status bar at bottom */
			.card-status-bar {
				height: 20px;
				display: flex;
				align-items: center;
				font-size: 8px;
				border-top: 1px solid #fff;
				padding: 0 2px;
				margin: 0 -8px;
			}
			
			.status-bar-field {
				border: 1px solid;
				border-color: #808080 #fff #fff #808080;
				padding: 2px 4px;
				margin-right: 2px;
				flex-shrink: 0;
			}
			
			.status-bar-field:last-child {
				margin-left: auto;
				margin-right: 0;
			}
			
			/* QR code positioning */
			.qr-container {
				position: absolute;
				bottom: 22px;
				right: 8px;
				text-align: center;
				z-index: 50;
			}
			
			/* QR positioning for single-sided */
			.single-sided .qr-container {
				top: 22px;
				bottom: auto;
			}
			
			.qr-small {
				width: 50px;
				height: 50px;
				background: white;
				padding: 2px;
				border: 1px solid #808080;
			}
			
			.qr-small img {
				width: 100%;
				height: 100%;
			}
			
			.qr-label {
				font-size: 7px;
				margin-top: 2px;
				padding: 0 2px;
			}
			
			.single-sided .qr-label {
				background: white;
			}
			
			/* Single vs double sided */
			.single-sided #card-back {
				display: none;
			}
			
			.double-sided .qr-container {
				display: none;
			}
			
			/* Back side for double-sided */
			.back-content {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				height: 100%;
			}
			
			.qr-large {
				text-align: center;
			}
			
			.qr-large img {
				width: 120px;
				height: 120px;
			}
			
			.qr-large .qr-label {
				font-size: 10px;
				margin-top: 8px;
			}
			
			/* Print styles */
			@media print {
				body {
					margin: 0;
					padding: 0;
					background: white;
				}
				
				.theme-controls {
					display: none !important;
				}
			}
			
			/* Screen preview styles */
			@media screen {
				body {
					background: #008080;
					padding: 20px;
					display: flex;
					flex-direction: column;
					justify-content: center;
					align-items: center;
					min-height: 100vh;
					gap: 20px;
				}
				
				.card-container {
					box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
				}
			}
			
			/* Theme switcher */
			.theme-controls {
				position: fixed;
				top: 10px;
				right: 10px;
				z-index: 100;
			}
			
			.controls-window {
				background: white;
				min-width: 220px;
			}
			
			.controls-window .window-body {
				padding: 8px;
			}
			
			.theme-controls fieldset {
				margin-bottom: 8px;
			}
			
			.theme-controls fieldset:last-child {
				margin-bottom: 0;
			}
			
			.theme-controls label {
				display: block;
				margin-bottom: 4px;
			}
			
			.theme-controls button {
				margin-right: 4px;
				margin-bottom: 4px;
			}
		</style>
	</head>
	<body class="single-sided">
		<!-- Theme controls for preview only -->
		<div class="theme-controls">
			<div class="window controls-window">
				<div class="title-bar">
					<div class="title-bar-text">Card Options</div>
					<div class="title-bar-controls">
						<button aria-label="Close" onclick="this.closest('.theme-controls').style.display='none'">√ó</button>
					</div>
				</div>
				<div class="window-body">
					<fieldset>
						<legend>Card Version</legend>
						<label>
							<input type="radio" name="version" value="single" checked> Single-sided
						</label>
						<label>
							<input type="radio" name="version" value="double"> Double-sided
						</label>
					</fieldset>
					<fieldset>
						<legend>Theme</legend>
						<label>
							<input type="radio" name="theme" value="98" checked> Win98
						</label>
						<label>
							<input type="radio" name="theme" value="xp"> WinXP
						</label>
					</fieldset>
					<fieldset>
						<legend>Export</legend>
						<button onclick="window.print()">üñ®Ô∏è Print</button>
						<button onclick="alert('Use browser screenshot tool or Print to PDF')">üì∑ Save Image</button>
					</fieldset>
					<button onclick="window.location.href='/'">‚Üê Back to Site</button>
				</div>
			</div>
		</div>
		
		<!-- Front of card -->
		<div class="card-container" id="card-front">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">evangelista.exe</div>
					<div class="title-bar-controls">
						<button aria-label="Minimize"></button>
						<button aria-label="Maximize"></button>
						<button aria-label="Close">√ó</button>
					</div>
				</div>
				<div class="window-body">
					<div class="qr-container">
						<div class="qr-small">
							<img src="/site_qrcode.png" alt="QR Code" />
						</div>
						<div class="qr-label">www.evangelista.moe</div>
					</div>
					
					<div class="card-content">
						<div class="header-section">
							<div class="name">Marc Evangelista</div>
							<div class="title">AI + Full-Stack Developer</div>
						</div>
						
						<div class="tagline">Building codebases that build themselves</div>
						
						<div class="badge-container">
							<span class="badge">CS Foundations</span>
							<span class="badge operator">+</span>
							<span class="badge">Agentic Engineering</span>
							<span class="badge operator">=</span>
							<span class="badge">Rapid, Robust Solutions</span>
						</div>
						
						<div class="impact-section">
							<div class="impact-row">
								<span class="impact-label">What I Do:</span>
								<span class="impact-value">Full-stack apps in hours, not weeks</span>
							</div>
							<div class="impact-row">
								<span class="impact-label">How:</span>
								<span class="impact-value">Claude agentic workflows + Deep CS knowledge</span>
							</div>
							<div class="impact-row">
								<span class="impact-label">Experience:</span>
								<span class="impact-value">Bloomberg, Virginia Tech CS</span>
							</div>
						</div>
					</div>
					
					<div class="status-bar card-status-bar">
						<p class="status-bar-field">github.com/cybermelons</p>
						<p class="status-bar-field">marc@evangelista.moe</p>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Back of card -->
		<div class="card-container" id="card-back">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">evangelista.moe</div>
					<div class="title-bar-controls">
						<button aria-label="Minimize"></button>
						<button aria-label="Maximize"></button>
						<button aria-label="Close"></button>
					</div>
				</div>
				<div class="window-body">
					<div class="back-content">
						<div class="qr-large">
							<img src="/site_qrcode.png" alt="QR Code" />
							<div class="qr-label">www.evangelista.moe</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<script>
			// Theme switcher
			const themeInputs = document.querySelectorAll('input[name="theme"]');
			const win98CSS = document.getElementById('win98-css');
			const winxpCSS = document.getElementById('winxp-css');
			
			themeInputs.forEach(input => {
				input.addEventListener('change', (e) => {
					if (e.target.value === '98') {
						win98CSS.disabled = false;
						winxpCSS.disabled = true;
					} else {
						win98CSS.disabled = true;
						winxpCSS.disabled = false;
					}
				});
			});
			
			// Version switcher
			const versionInputs = document.querySelectorAll('input[name="version"]');
			versionInputs.forEach(input => {
				input.addEventListener('change', (e) => {
					if (e.target.value === 'single') {
						document.body.classList.add('single-sided');
						document.body.classList.remove('double-sided');
					} else {
						document.body.classList.remove('single-sided');
						document.body.classList.add('double-sided');
					}
				});
			});
		</script>
	</body>
</html>
