<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Marc Evangelista - Business Card</title>
		
		<!-- Windows CSS libraries -->
		<link rel="stylesheet" href="https://unpkg.com/98.css" id="win98-css" />
		<link rel="stylesheet" href="https://unpkg.com/xp.css" id="winxp-css" disabled />
		
		<style>
			@page {
				size: 3.75in 2.25in; /* Added 0.125in bleed on all sides */
				margin: 0;
			}
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				margin: 0;
				padding: 0;
			}
			
			.card-container {
				width: 3.75in; /* Added 0.125in bleed on each side */
				height: 2.25in; /* Added 0.125in bleed on each side */
				position: relative;
				background: #c0c0c0; /* Window background extends to bleed */
				page-break-after: always;
				overflow: hidden;
				display: flex;
				align-items: center;
				justify-content: center;
			}
			
			.window {
				width: calc(100% - 0.25in); /* Account for bleed */
				height: calc(100% - 0.25in); /* Account for bleed */
				margin: 0;
				display: flex;
				flex-direction: column;
				background: #c0c0c0;
				border: 2px solid;
				border-color: #ffffff #808080 #808080 #ffffff;
			}
			
			/* Slim title bar to save space */
			.title-bar {
				height: 20px;
				padding: 2px;
				display: flex;
				align-items: center;
				justify-content: space-between;
				background: #000080;
				color: white;
			}
			
			.title-bar-text {
				font-size: 11px;
				line-height: 16px;
				padding-left: 2px;
			}
			
			.title-bar-controls {
				display: flex;
				height: 16px;
			}
			
			.title-bar-controls button {
				width: 16px;
				height: 14px;
				min-width: 16px;
				min-height: 14px;
				padding: 0;
				margin: 0 1px;
				font-size: 8px;
				display: flex;
				align-items: center;
				justify-content: center;
			}
			
			.window-body {
				flex-grow: 1;
				padding-left: 8px;
				padding-right: 8px;
				display: flex;
				flex-direction: column;
				font-size: 9px;
				height: calc(100% - 20px);
				overflow: hidden;
			}
			
			/* Main content area */
			.card-content {
				flex-grow: 1;
				display: flex;
				flex-direction: column;
			}
			
			/* Name and title */
			.header-section {
				margin-bottom: 4px;
			}
			
			.name {
				font-size: 16px;
				font-weight: bold;
				margin-bottom: 2px;
				font-family: 'Arial', sans-serif !important;
				-webkit-font-smoothing: antialiased;
			}
			
			.title {
				font-size: 10px;
				color: #666;
			}
			
			/* Main tagline */
			.tagline {
				font-size: 11px;
				font-weight: bold;
				color: #0052cc;
				margin-bottom: 6px;
				font-style: italic;
			}
			
			/* Skills grid - icon-based like main site */
			.skills-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 3px;
				margin-bottom: 4px;
				flex-grow: 1;
			}
			
			.skill-card {
				background: #c0c0c0;
				border: 2px solid;
				border-color: #ffffff #808080 #808080 #ffffff;
				padding: 4px;
				display: flex;
				align-items: center;
				gap: 6px;
				cursor: default;
			}
			
			.skill-card:active {
				border-color: #808080 #ffffff #ffffff #808080;
			}
			
			.skill-icon {
				margin-right: 2px;
				margin-left: 2px;
				width: 16px;
				height: 16px;
				flex-shrink: 0;
			}
			
			.skill-content {
				text-align: left;
				flex-grow: 1;
			}
			
			.skill-title {
				font-weight: bold;
				font-size: 11px;
				margin-bottom: 1px;
			}
			
			.skill-desc {
				font-size: 11px;
				color: #000;
			}
			
			/* XP theme overrides for skills */
			body:has(#winxp:checked) .skill-card {
				background: #ece9d8;
				border-radius: 3px;
				border: 1px solid #003c74;
				box-shadow: inset 0 1px 0 #ffffff;
			}
			
			body:has(#winxp:checked) .skill-card:hover {
				background: #e4f3ff;
				border-color: #0078d7;
			}
			
			/* XP theme overrides for title bar */
			body:has(#winxp:checked) .title-bar {
				background: linear-gradient(to bottom, #0054e3, #0073ea);
			}
			
			body:has(#winxp:checked) .window {
				border-radius: 6px 6px 0 0;
			}
			
			/* Formula badge container */
			.formula-container {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 4px;
				margin-bottom: 8px;
				font-size: 9px;
			}
			
			.formula-badge {
				background: #c0c0c0;
				border: 1px solid;
				border-color: #fff #808080 #808080 #fff;
				padding: 2px 4px;
				font-size: 9px;
				white-space: nowrap;
			}
			
			.formula-operator {
				font-weight: bold;
				padding: 0 2px;
			}
			
			/* Status bar at bottom */
			.card-status-bar {
				height: 20px;
				display: flex;
				align-items: center;
				font-size: 8px;
				border-top: 1px solid #fff;
				padding: 0 2px;
				margin: 0 -8px 2px -8px;
			}
			
			.status-bar-field {
				border: 1px solid;
				border-color: #808080 #fff #fff #808080;
				padding: 2px 4px;
				font-size: 11px;
				margin-right: 2px;
				flex-shrink: 0;
				margin-bottom: 2px;
			}
			.status-bar-field-right {
				margin-right: 0;
			}
			
			.status-bar-field:last-child {
				margin-left: auto;
				margin-right: 0;
			}
			
			/* QR code positioning */
			.qr-container {
				position: absolute;
				bottom: 22px;
				right: 8px;
				text-align: center;
				z-index: 50;
			}
			
			/* QR positioning for single-sided */
			.single-sided .qr-container {
				top: 36px;
				right: 22px;
				bottom: auto;
				display: flex;
				flex-direction: column;
				align-items: flex-end;
			}
			
			.qr-small {
				width: 50px;
				height: 50px;
				background: white;
				padding: 2px;
				border: 1px solid #808080;
			}
			
			.qr-small img {
				width: 100%;
				height: 100%;
			}
			
			.qr-label {
				visibility: hidden;
				font-size: 7px;
				margin-top: 2px;
				padding: 0 2px;
				text-align: right;
			}
			
			.single-sided .qr-label {
				background: white;
			}
			
			/* Single vs double sided */
			.single-sided #card-back {
				display: none;
			}
			
			.double-sided .qr-container {
				display: none;
			}
			
			/* Back side for double-sided */
			.back-content {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				height: 100%;
			}
			
			.qr-large {
				text-align: center;
			}
			
			.qr-large img {
				width: 120px;
				height: 120px;
			}
			
			.qr-large .qr-label {
				font-size: 10px;
				margin-top: 8px;
			}
			
			/* Print styles */
			@media print {
				body {
					margin: 0;
					padding: 0;
					background: white;
				}
				
				.theme-controls {
					display: none !important;
				}
			}
			
			/* Screen preview styles */
			@media screen {
				body {
					background: #008080;
					padding: 20px;
					display: flex;
					flex-direction: column;
					justify-content: center;
					align-items: center;
					min-height: 100vh;
					gap: 20px;
				}
				
				.card-container {
					box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
					position: relative;
				}
			}
			
			/* Theme switcher */
			.theme-controls {
				position: fixed;
				top: 10px;
				right: 10px;
				z-index: 100;
			}
			
			.controls-window {
				background: white;
				min-width: 220px;
			}
			
			.controls-window .window-body {
				padding: 8px;
			}
			
			.theme-controls fieldset {
				margin-bottom: 8px;
			}
			
			.theme-controls fieldset:last-child {
				margin-bottom: 0;
			}
			
			.theme-controls label {
				display: block;
				margin-bottom: 4px;
			}
			
			.theme-controls button {
				margin-right: 4px;
				margin-bottom: 4px;
			}
		</style>
	</head>
	<body class="single-sided">
		<!-- Theme controls for preview only -->
		<div class="theme-controls">
			<div class="window controls-window">
				<div class="title-bar">
					<div class="title-bar-text">Card Options</div>
					<div class="title-bar-controls">
						<button aria-label="Close" onclick="this.closest('.theme-controls').style.display='none'">√ó</button>
					</div>
				</div>
				<div class="window-body">
					<fieldset>
						<legend>Card Version</legend>
						<label>
							<input type="radio" name="version" value="single" checked> Single-sided
						</label>
						<label>
							<input type="radio" name="version" value="double"> Double-sided
						</label>
					</fieldset>
					<fieldset>
						<legend>Theme</legend>
						<label>
							<input type="radio" name="theme" value="98" checked> Win98
						</label>
						<label>
							<input type="radio" name="theme" value="xp"> WinXP
						</label>
					</fieldset>
					<fieldset>
						<legend>Export</legend>
						<button onclick="window.print()">üñ®Ô∏è Print</button>
						<button onclick="alert('Use browser screenshot tool or Print to PDF')">üì∑ Save Image</button>
					</fieldset>
					<button onclick="window.location.href='/'">‚Üê Back to Site</button>
				</div>
			</div>
		</div>
		
		<!-- Front of card -->
		<div class="card-container" id="card-front">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">www.evangelista.moe</div>
					<div class="title-bar-controls">
						<button aria-label="Minimize"></button>
						<button aria-label="Maximize"></button>
						<button aria-label="Close">√ó</button>
					</div>
				</div>
				<div class="window-body">
					<div class="qr-container">
						<div class="qr-small">
							<img src="/site_qrcode.png" alt="QR Code" />
						</div>
						<div class="qr-label">www.evangelista.moe</div>
					</div>
					
					<div class="card-content">
						<div class="header-section">
							<div class="name">Marc Evangelista</div>
							<div class="title">AI + Full-Stack Engineer</div>
						</div>
						
						<div class="tagline">Building codebases that build themselves</div>
						
						<div class="skills-grid">
							<div class="skill-card">
								<img src="https://win98icons.alexmeub.com/icons/png/html-3.png" alt="Web" class="skill-icon" />
								<div class="skill-content">
									<div class="skill-title">What I Do</div>
									<div class="skill-desc">Full-stack apps in hours</div>
								</div>
							</div>
							<div class="skill-card">
								<img src="https://win98icons.alexmeub.com/icons/png/msagent-1.png" alt="AI" class="skill-icon" />
								<div class="skill-content">
									<div class="skill-title">AI Agent Expert</div>
									<div class="skill-desc">CS + Claude</div>
								</div>
							</div>
							<div class="skill-card">
								<img src="https://win98icons.alexmeub.com/icons/png/world-2.png" alt="Bloomberg" class="skill-icon" />
								<div class="skill-content">
									<div class="skill-title">Experience</div>
									<div class="skill-desc">Bloomberg, CS@VA Tech</div>
								</div>
							</div>
							<div class="skill-card">
								<img src="https://win98icons.alexmeub.com/icons/png/console_prompt-0.png" alt="Tech" class="skill-icon" />
								<div class="skill-content">
									<div class="skill-title">Specialties</div>
									<div class="skill-desc">AI Integration, Prototyping</div>
								</div>
							</div>
						</div>
					</div>
					
					<div class="status-bar card-status-bar">
						<p class="status-bar-field">github.com/cybermelons</p>
						<p class="status-bar-field status-bar-field-right">marc@evangelista.moe</p>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Back of card -->
		<div class="card-container" id="card-back">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">evangelista.moe</div>
					<div class="title-bar-controls">
						<button aria-label="Minimize"></button>
						<button aria-label="Maximize"></button>
						<button aria-label="Close"></button>
					</div>
				</div>
				<div class="window-body">
					<div class="back-content">
						<div class="qr-large">
							<img src="/site_qrcode.png" alt="QR Code" />
							<div class="qr-label">www.evangelista.moe</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<script>
			// Theme switcher
			const themeInputs = document.querySelectorAll('input[name="theme"]');
			const win98CSS = document.getElementById('win98-css');
			const winxpCSS = document.getElementById('winxp-css');
			
			themeInputs.forEach(input => {
				input.addEventListener('change', (e) => {
					if (e.target.value === '98') {
						win98CSS.disabled = false;
						winxpCSS.disabled = true;
					} else {
						win98CSS.disabled = true;
						winxpCSS.disabled = false;
					}
				});
			});
			
			// Version switcher
			const versionInputs = document.querySelectorAll('input[name="version"]');
			versionInputs.forEach(input => {
				input.addEventListener('change', (e) => {
					if (e.target.value === 'single') {
						document.body.classList.add('single-sided');
						document.body.classList.remove('double-sided');
					} else {
						document.body.classList.remove('single-sided');
						document.body.classList.add('double-sided');
					}
				});
			});
		</script>
	</body>
</html>
