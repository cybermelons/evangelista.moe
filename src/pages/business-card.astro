<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Marc Evangelista - Business Card</title>
		
		<!-- Windows CSS libraries -->
		<link rel="stylesheet" href="https://unpkg.com/98.css" id="win98-css" />
		<link rel="stylesheet" href="https://unpkg.com/xp.css" id="winxp-css" disabled />
		
		<!-- QR Code library -->
		<script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
		
		<style>
			@page {
				size: 3.5in 2in;
				margin: 0;
			}
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				margin: 0;
				padding: 0;
			}
			
			.card-container {
				width: 3.5in;
				height: 2in;
				position: relative;
				background: white;
				page-break-after: always;
			}
			
			.window {
				width: 100%;
				height: 100%;
				margin: 0;
				display: flex;
				flex-direction: column;
			}
			
			/* Only override fonts for title bar and headings */
			.title-bar-text {
				font-family: 'Tahoma', 'Arial', sans-serif !important;
				font-smooth: always;
				-webkit-font-smoothing: antialiased;
			}
			
			.window-body {
				flex-grow: 1;
				padding: 8px;
				display: flex;
				flex-direction: column;
				justify-content: space-between;
				font-size: 10px;
			}
			
			.content-top {
				flex-grow: 1;
			}
			
			/* Use Arial for headings only */
			.name {
				font-size: 14pt;
				font-weight: bold;
				margin-bottom: 4px;
				font-family: 'Arial', 'Tahoma', sans-serif !important;
				font-smooth: always;
				-webkit-font-smoothing: antialiased;
			}
			
			.achievement {
				font-size: 16pt;
				font-weight: bold;
				color: #0066cc;
				margin-bottom: 2px;
				font-family: 'Arial', 'Tahoma', sans-serif !important;
				font-smooth: always;
				-webkit-font-smoothing: antialiased;
			}
			
			/* Small text keeps default pixelated font */
			.tagline {
				font-size: 8pt;
				color: #666;
				margin-bottom: 8px;
			}
			
			.achievement-detail {
				font-size: 8pt;
				margin-bottom: 6px;
			}
			
			.skills {
				font-size: 7pt;
				margin-bottom: 6px;
			}
			
			.contact {
				display: flex;
				justify-content: space-between;
				font-size: 8pt;
				border-top: 1px solid #ccc;
				padding-top: 6px;
			}
			
			/* Sticky note accent */
			.sticky-accent {
				position: absolute;
				top: 30px;
				right: 8px;
				width: 50px;
				height: 50px;
				background: #FFFD75;
				transform: rotate(-5deg);
				box-shadow: 1px 1px 3px rgba(0,0,0,0.2);
				padding: 6px;
				font-size: 6pt;
				font-family: 'Comic Sans MS', cursive;
				z-index: 10;
			}
			
			/* Back side with QR code */
			.card-back {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				height: 100%;
			}
			
			.qr-container {
				text-align: center;
			}
			
			.qr-container canvas {
				max-width: 120px;
				max-height: 120px;
			}
			
			.qr-label {
				margin-top: 10px;
				font-size: 10pt;
				font-family: 'Arial', 'Tahoma', sans-serif !important;
			}
			
			/* Print styles */
			@media print {
				body {
					margin: 0;
					padding: 0;
					background: white;
				}
				
				.theme-controls {
					display: none !important;
				}
			}
			
			/* Screen preview styles */
			@media screen {
				body {
					background: #008080;
					padding: 20px;
					display: flex;
					flex-direction: column;
					justify-content: center;
					align-items: center;
					min-height: 100vh;
					gap: 20px;
				}
				
				.card-container {
					box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
				}
			}
			
			/* Theme switcher for preview */
			.theme-controls {
				position: fixed;
				top: 10px;
				right: 10px;
				background: white;
				padding: 10px;
				border: 2px solid #000;
				z-index: 100;
			}
		</style>
	</head>
	<body>
		<!-- Theme controls for preview only -->
		<div class="theme-controls">
			<label>
				<input type="radio" name="theme" value="98" checked> Win98
			</label>
			<label>
				<input type="radio" name="theme" value="xp"> WinXP
			</label>
		</div>
		
		<!-- Front of card -->
		<div class="card-container">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">Marc Evangelista - real human engineer</div>
					<div class="title-bar-controls">
						<button aria-label="Minimize"></button>
						<button aria-label="Maximize"></button>
						<button aria-label="Close"></button>
					</div>
				</div>
				<div class="window-body">
					<div class="sticky-accent">
						TODO:<br>
						☐ 60x<br>
						☐ AI<br>
						☐ humor
					</div>
					
					<div class="content-top">
						<div class="name">Marc Evangelista</div>
						<div class="tagline">AI engineer. make computer do work.</div>
						
						<div class="achievement">60x faster</div>
						<div class="achievement-detail">C++ builds at Bloomberg</div>
						
						<div class="skills">
							Bleeding edge AI agentic workflows • Prompt engineering<br>
							Real 90s baby who grew up with Windows
						</div>
					</div>
					
					<div class="contact">
						<span>marc@evangelista.moe</span>
						<span>github.com/cybermelons</span>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Back of card -->
		<div class="card-container">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">evangelista.moe</div>
					<div class="title-bar-controls">
						<button aria-label="Minimize"></button>
						<button aria-label="Maximize"></button>
						<button aria-label="Close"></button>
					</div>
				</div>
				<div class="window-body">
					<div class="card-back">
						<div class="qr-container">
							<canvas id="qrcode"></canvas>
							<div class="qr-label">evangelista.moe</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<script>
			// Generate QR code
			window.addEventListener('load', () => {
				const canvas = document.getElementById('qrcode');
				QRCode.toCanvas(canvas, 'https://evangelista.moe', {
					width: 120,
					margin: 1,
					color: {
						dark: '#000000',
						light: '#FFFFFF'
					}
				});
			});
			
			// Theme switcher for preview
			const themeInputs = document.querySelectorAll('input[name="theme"]');
			const win98CSS = document.getElementById('win98-css');
			const winxpCSS = document.getElementById('winxp-css');
			
			themeInputs.forEach(input => {
				input.addEventListener('change', (e) => {
					if (e.target.value === '98') {
						win98CSS.disabled = false;
						winxpCSS.disabled = true;
					} else {
						win98CSS.disabled = true;
						winxpCSS.disabled = false;
					}
				});
			});
		</script>
	</body>
</html>