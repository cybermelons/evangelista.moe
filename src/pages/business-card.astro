<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Marc Evangelista - Business Card</title>
		
		<!-- Windows CSS libraries -->
		<link rel="stylesheet" href="https://unpkg.com/98.css" id="win98-css" />
		<link rel="stylesheet" href="https://unpkg.com/xp.css" id="winxp-css" disabled />
		
		<!-- html2canvas for image export -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
		
		<style>
			@page {
				size: 3.5in 2in;
				margin: 0;
			}
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				margin: 0;
				padding: 0;
			}
			
			.card-container {
				width: 3.5in;
				height: 2in;
				position: relative;
				background: white;
				page-break-after: always;
			}
			
			.window {
				width: 100%;
				height: 100%;
				margin: 0;
				display: flex;
				flex-direction: column;
			}
			
			/* Only override fonts for title bar and headings */
			.title-bar-text {
				font-family: 'Tahoma', 'Arial', sans-serif !important;
				font-smooth: always;
				-webkit-font-smoothing: antialiased;
				margin: 2px;
			}

			.title-bar {
				margin: 2px;
			}
			
			.window-body {
				flex-grow: 1;
				padding: 10px;
				display: flex;
				flex-direction: column;
				justify-content: space-between;
				font-size: 10px;
			}
			
			.content-top {
				flex-grow: 1;
			}
			
			/* Use Arial for headings only */
			.name {
				font-size: 14pt;
				font-weight: bold;
				margin-bottom: 4px;
				font-family: 'Arial', 'Tahoma', sans-serif !important;
				font-smooth: always;
				-webkit-font-smoothing: antialiased;
			}
			
			.achievement {
				font-size: 12pt;
				font-weight: bold;
				color: #0052cc;
				margin-bottom: 4px;
				font-family: 'Arial', 'Tahoma', sans-serif !important;
			}
			
			/* Small text keeps default pixelated font */
			.tagline {
				font-size: 9pt;
				color: #333;
				margin-bottom: 8px;
				font-style: italic;
			}
			
			.achievement-detail {
				font-size: 8pt;
				margin-bottom: 6px;
			}
			
			.skills {
				font-size: 8pt;
				margin-bottom: 6px;
				line-height: 1.4;
			}
			
			.contact {
				display: flex;
				justify-content: space-between;
				font-size: 8pt;
				border-top: 1px solid #ccc;
				padding-top: 6px;
			}
			
			/* Sticky note accent */
			.sticky-accent {
				position: absolute;
				top: 5px;
				right: 5px;
				width: 50px;
				height: 50px;
				background: #FFFD75;
				transform: rotate(-5deg);
				box-shadow: 1px 1px 3px rgba(0,0,0,0.2);
				padding: 4px;
				font-size: 6pt;
				font-family: 'Comic Sans MS', cursive;
				z-index: 10;
				text-align: center;
				display: flex;
				align-items: center;
				justify-content: center;
			}
			
			/* Back side with QR code */
			.card-back {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				height: 100%;
			}
			
			.qr-container {
				text-align: center;
			}
			
			.qr-container img {
				width: 120px;
				height: 120px;
			}
			
			.qr-label {
				margin-top: 10px;
				font-size: 10pt;
				font-family: 'Arial', 'Tahoma', sans-serif !important;
			}
			
			/* Version switching */
			.single-sided #card-back {
				display: none;
			}
			
			/* Print styles */
			@media print {
				body {
					margin: 0;
					padding: 0;
					background: white;
				}
				
				.theme-controls {
					display: none !important;
				}
				
				.card-container {
					page-break-inside: avoid;
				}
			}
			
			/* Screen preview styles */
			@media screen {
				body {
					background: #008080;
					padding: 20px;
					display: flex;
					flex-direction: column;
					justify-content: center;
					align-items: center;
					min-height: 100vh;
					gap: 20px;
				}
				
				.card-container {
					box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
				}
			}
			
			/* Theme switcher for preview */
			.theme-controls {
				position: fixed;
				top: 10px;
				right: 10px;
				background: white;
				padding: 15px;
				border: 2px solid #000;
				z-index: 100;
				font-size: 12px;
			}
			
			.theme-controls > div {
				margin-bottom: 10px;
			}
			
			.theme-controls label {
				margin-right: 10px;
			}
			
			.theme-controls button {
				margin-right: 5px;
			}
			
			/* Highlights for practical tools */
			.highlight {
				background: #e8f4f8;
				padding: 1px 3px;
				margin: 1px 0;
			}
		</style>
	</head>
	<body class="single-sided">
		<!-- Theme controls for preview only -->
		<div class="theme-controls">
			<div>
				<label>
					<input type="radio" name="version" value="single" checked> Single-sided
				</label>
				<label>
					<input type="radio" name="version" value="double"> Double-sided
				</label>
			</div>
			<div>
				<label>
					<input type="radio" name="theme" value="98" checked> Win98
				</label>
				<label>
					<input type="radio" name="theme" value="xp"> WinXP
				</label>
			</div>
			<div>
				<button onclick="window.print()">üñ®Ô∏è Print</button>
				<button onclick="exportAsImage()">üì∑ Save as Image</button>
			</div>
			<div>
				<button onclick="window.location.href='/'">‚Üê Back to Site</button>
			</div>
		</div>
		
		<!-- Front of card -->
		<div class="card-container" id="card-front">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">evangelista.exe</div>
					<div class="title-bar-controls">
						<button aria-label="Minimize"></button>
						<button aria-label="Maximize"></button>
						<button aria-label="Close"></button>
					</div>
				</div>
				<div class="window-body">
					<div class="sticky-accent">
						AI<br>
						AGENT<br>
						EXPERT
					</div>
					
					<div class="content-top">
						<div class="name">Marc Evangelista</div>
						<div class="tagline">Building codebases that build themselves</div>
						
						<div class="achievement">Claude agentic workflows</div>
						<div class="achievement-detail">I use AI agents to develop faster than traditional methods</div>
						
						<div class="skills">
							<strong>REAL IMPACT:</strong><br>
							‚Ä¢ Bloomberg: 60x faster C++ builds<br>
							‚Ä¢ SharpTax: Automated tax workflows<br>
							‚Ä¢ Today: Full-stack apps in hours<br>
							<br>
							Backend ‚Üí Full-Stack ‚Üí AI Engineering
						</div>
					</div>
					
					<div class="contact">
						<span>marc@evangelista.moe</span>
						<span>www.evangelista.moe</span>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Back of card -->
		<div class="card-container" id="card-back">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">evangelista.moe</div>
					<div class="title-bar-controls">
						<button aria-label="Minimize"></button>
						<button aria-label="Maximize"></button>
						<button aria-label="Close"></button>
					</div>
				</div>
				<div class="window-body">
					<div class="card-back">
						<div class="qr-container">
							<img src="/site_qrcode.png" alt="QR Code" />
							<div class="qr-label">www.evangelista.moe</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<script>
			// Theme switcher
			const themeInputs = document.querySelectorAll('input[name="theme"]');
			const win98CSS = document.getElementById('win98-css');
			const winxpCSS = document.getElementById('winxp-css');
			
			themeInputs.forEach(input => {
				input.addEventListener('change', (e) => {
					if (e.target.value === '98') {
						win98CSS.disabled = false;
						winxpCSS.disabled = true;
					} else {
						win98CSS.disabled = true;
						winxpCSS.disabled = false;
					}
				});
			});
			
			// Version switcher
			const versionInputs = document.querySelectorAll('input[name="version"]');
			versionInputs.forEach(input => {
				input.addEventListener('change', (e) => {
					if (e.target.value === 'single') {
						document.body.classList.add('single-sided');
						document.body.classList.remove('double-sided');
					} else {
						document.body.classList.remove('single-sided');
						document.body.classList.add('double-sided');
					}
				});
			});
			
			// Export as image function
			async function exportAsImage() {
				const controls = document.querySelector('.theme-controls');
				controls.style.display = 'none';
				
				const cards = [];
				if (document.body.classList.contains('single-sided')) {
					cards.push(document.getElementById('card-front'));
				} else {
					cards.push(document.getElementById('card-front'));
					cards.push(document.getElementById('card-back'));
				}
				
				for (let i = 0; i < cards.length; i++) {
					const canvas = await html2canvas(cards[i], {
						scale: 2,
						backgroundColor: 'white'
					});
					
					const link = document.createElement('a');
					link.download = `business-card-${i === 0 ? 'front' : 'back'}.png`;
					link.href = canvas.toDataURL();
					link.click();
					
					// Small delay between downloads
					await new Promise(resolve => setTimeout(resolve, 500));
				}
				
				controls.style.display = 'block';
			}
		</script>
	</body>
</html>